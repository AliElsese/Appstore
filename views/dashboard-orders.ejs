<%- include('include/_headerAdmin') %>

<div class="content">
    <div class="container mt-4 mb-5">
        <div class="row">
            <% for(var i = 0; i < orders.length; i++) { %>
        
                <div class="col-md-6 mb-3">
                    <div class="card p-5">
                        <div class="col-md-12 text-center">
                            <h2 class="mt-4"><%= orders[i].name %></h2>
                            <h3 class="mt-4"><%= orders[i].address %></h3>
                            <h4 class="mt-4"><%= orders[i].addressDetails %></h4>
                            <p class="mt-3 mb-3"><%= orders[i].phoneNumber %></p>
                            <div class="row">
                                <a href="/single-order/<%= orders[i]._id %>" class="btn mt-3">تفاصيل الطلب</a>
                                <a href="/api/orders/<%= orders[i]._id %>"  class="btn mt-3"> 
                                    حذف الطلب 
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
    
            <% } %>
        </div>
    </div>
</div>

<%- include('include/_footerAdmin') %>